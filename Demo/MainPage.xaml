<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="App.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:App.ViewModels;assembly=App"
             xmlns:controls="clr-namespace:App.Controls.Examples;assembly=App"
             xmlns:stateButton="clr-namespace:IeuanWalker.Maui.StateButton;assembly=IeuanWalker.Maui.StateButton"
             Padding="{StaticResource PagePadding}">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <controls:CustomButton Clicked="ExampleBtn_Clicked" Text="Examples" />
        <controls:CustomButton Clicked="EventCommandBtn_Clicked" Text="Event/ command test page" />
        <controls:CustomButton Clicked="BtnNotInScrollView_Clicked" Text="Test button not in scroll view" />
        <controls:CustomButton Clicked="AccessibilityTestsBtn_Clicked" Text="Accessibility tests" />
    </VerticalStackLayout>
</ContentPage>